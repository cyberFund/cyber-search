<config
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core.xsd">

    <cache alias="bitcoin.transactions">
        <key-type>java.lang.String</key-type>
        <value-type>fund.cyber.node.model.JsonRpcBitcoinTransaction</value-type>
        <resources>
            <heap unit="entries">20000000</heap>
        </resources>
    </cache>

    <cache alias="bitcoin_cash.transactions">
        <key-type>java.lang.String</key-type>
        <value-type>fund.cyber.node.model.JsonRpcBitcoinTransaction</value-type>
        <resources>
            <heap unit="entries">20000000</heap>
        </resources>
    </cache>

</config>